<Page
    x:Class="SQLQueryTest.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SQLQueryTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="0,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">

            <TextBox x:ConnectionId='4' x:Name="FName1Input"
                     Header="Enter your first name:" PlaceholderText="First Name"
                     Width="300" HorizontalAlignment="Left"/>

            <TextBox x:ConnectionId='5' x:Name="FName2Input"
                     Header="Enter your middle name:" PlaceholderText="Middle Name"
                     Width="300" HorizontalAlignment="Left"/>

            <TextBox x:ConnectionId='6' x:Name="LastNameInput"
                     Header="Enter your last name:" PlaceholderText="Last Name"
                     Width="300" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <Button x:ConnectionId='7' Name="SubmitButton" Content="Submit"                     />
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="0,20,0,0" HorizontalAlignment="Right" VerticalAlignment="Top">

            <TextBox x:ConnectionId='2' x:Name="UserID"
                     Header="Write your User ID:" PlaceholderText="User ID"
                     Width="300" HorizontalAlignment="Left"/>


            <Button x:ConnectionId='3' Name="SubmitImage" Content="Submit"                          />
        </StackPanel>
    </Grid>
</Page>

